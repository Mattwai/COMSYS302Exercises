<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NumbersActivityTheme" parent="AppTheme">
        <item name="colorPrimary">@color/appBarColorNumbersActivity</item>
        <item name="android:statusBarColor">@color/appBarColorNumbersActivity</item>
    </style>

    <style name="ColorsActivityTheme" parent="AppTheme">
        <item name="colorPrimary">@color/appBarColorColorsActivity</item>
        <item name="android:statusBarColor">@color/appBarColorColorsActivity</item>
    </style>

    <style name="CategoryCardStyle">
        <item name="android:layout_marginBottom">4dp</item>
        <item name="cardElevation">8dp</item>
    </style>

    <style name="CategoryTextViews">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:textColor">#F0F0F0</item>
    </style>

</resources>
